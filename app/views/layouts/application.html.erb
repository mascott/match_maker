<!DOCTYPE html>
<html>
  <head>
    <title>MatchMaker</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  
  <body>
    <div class='container'>
      <div class='row'>
        <div class='col-xs-10'>

          <ul class='nav nav-tabs'>
            <li><%= link_to 'Users', users_path %></li>
            <li><%= link_to 'Seasons', seasons_path %></li>
            <li><%= link_to 'Organizations', organizations_path %></li>
            <li><%= link_to 'Invite', new_user_invitation_path %></li>
          </ul>
          
        </div>
        <div class='col-xs-2'>
          <%= current_user.name %>
        </div>
      </div>
      <div class='row'>
        <div class='col-xs-12'>
          <%= yield %>
        </div>
      </div>
    </div>

  </body>
</html>
